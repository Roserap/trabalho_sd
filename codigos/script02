                        <option value="string">String</option>
                        <option value="varchar">VARCHAR</option>
                    </select>
                    <input type="number" name="campo1_tamanho" placeholder="Tamanho" required>
                </div>

                <div class="form-group">
                    <label>Descrição do Campo 2:</label>
                    <input type="radio" name="chave2" value="chave"> Chave
